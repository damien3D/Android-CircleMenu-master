<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape>
            <stroke
                android:color="#ff8000"
                android:width="1dp" />

            <corners
                android:radius="4dp" />

            <marging
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <solid android:color="#26000000" />
            <!--<solid android:color="@android:color/transparent" />-->
        </shape>
    </item>
    <item>
    <shape>
        <stroke
            android:color="@android:color/white"
            android:width="1dp" />

        <corners
            android:radius="4dp" />

        <marging
            android:bottom="10dp"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp" />
        <solid android:color="@android:color/transparent" />
    </shape>
</item>




</selector>